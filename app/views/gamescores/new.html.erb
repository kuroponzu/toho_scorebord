<%provide(:title,"スコア登録")%>

<h1><%= @game_title %> スコア登録</h1>

<%= form_for(@gamescore) do |g|%>

  <%= g.hidden_field :name ,value: @game_title%>
  <%= g.label :difficulty,"難易度" %>
  <%= g.select :difficulty,@difficult.all.map{|o| [o.difficult]},class:"form-control"%>
  <%= g.label :character,"使用キャラクター" %>
  <%= g.select :character,@charaset.all.map{|o| [o.character]},class:"form-control"%>
  <%= g.label :score,"スコア" %>
  <%= g.text_field :score%>
  <%= g.label :clear,"クリア有無" %>
  <%= g.select :clear,[["未クリア","未クリア"],["クリア","クリア"]],class:"form-control" %>
  <%= g.submit "スコア登録", class: "btn btn-primary" %>

<%end%>


<%= link_to 'Back', list_path %>
