<table class="table table-hover">
  <caption>最新登録スコア一覧</caption>
  <thead>
    <tr>
      <th>作品名</th>
      <th>難易度</th>
      <th>キャラクター</th>
      <th>スコア</th>
      <th>クリア可否</th>
      <th>登録日時</th>
    </tr>
  </thead>
  <tbody>
  <% @scorelist.each do |score|%>
  <tr>
    <th><%=score.gamedetail.gamename%></th>
    <th><%=score.gamedetail.difficulty%></th>
    <th><%=score.gamedetail.character%></th>
    <th><%=score.score%></th>
    <th><%=score.clear%></th>
    <th><%=convert_to_japantime(score.updated_at)%></th>
    <th><%=link_to "削除",gameresults_path(score_id: score.id),method: :delete,
            data:{confirm:"本当に削除しますか？"},class: "btn btn-xs btn-primary"%></th>
  <%end%>
  </tbody>
</table>
