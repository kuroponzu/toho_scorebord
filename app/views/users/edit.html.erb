<%provide(:title,"ユーザ編集")%>
<h1>ユーザー編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="gravatar_edit">
        <%= gravatar_for @user %>
        <br><br><br>
        <a href="http://gravatar.com/emails" target="_blank">プロフィール画像変更</a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name,"名前" %>
      <%= f.text_field :name,value:@user.name, class: 'form-control' %>

      <%= f.label :email,"メールアドレス" %>
      <%= f.email_field :email,value:@user.email, class: 'form-control' %>

      <%= f.label :comment,"コメント"%>
      <%= f.text_field :comment,value:@user.comment, class: 'form-control' %>

      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

<%= link_to '戻る', users_path %>
